<model name="purchase" activable="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="product" plugin="basic" model="product" />
		<decimal name="quantity" >
			<validatesRange from="0" exclusively="true"/>
		</decimal>
		<decimal name="price" >
			<validatesRange from="0" exclusively="true"/>
		</decimal>
		<date name="date" />
	</fields>
	
	<hooks>
		<validatesWith class="com.qcadoo.mes.basic.PurchaseService" method="checkIfIsSamePurchaseWithSameQuantity" />
	</hooks>
	
	<identifier expression="#number + ' - ' + #name" />
</model>